@model List<BuildingBlock.DTOS.GalleryDTO>
@{
    ViewData["Title"] = "Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Gallery</h4>
            </div>
        </div>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var gallery in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card gallery-card">
                        <div class="card-body">
                            <h5 class="card-title">@gallery.Title</h5>
                            <p class="card-text">@gallery.Description</p>
                            <div class="gallery-preview">
                                @if (gallery.GalleryItems != null && gallery.GalleryItems.Any())
                                {
                                    <div class="row">
                                        @foreach (var item in gallery.GalleryItems.Take(4))
                                        {
                                            <div class="col-6 mb-2">
                                                <img src="~/assets/gallery/@item.ImagePath" alt="@item.ImageName"
                                                    class="img-fluid rounded preview-img"
                                                    style="height: 80px; object-fit: cover; width: 100%;">
                                            </div>
                                        }
                                    </div>
                                    @if (gallery.GalleryItems.Count > 4)
                                    {
                                        <div class="text-center mt-2">
                                            <small class="text-muted">+@(gallery.GalleryItems.Count - 4) more images</small>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="text-center text-muted">
                                        <i class="fas fa-images fa-3x"></i>
                                        <p>No images yet</p>
                                    </div>
                                }
                            </div>
                            <div class="mt-3">
                                <a href="@Url.Action("Details", "Gallery", new { id = gallery.IdGallery })"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i> View Gallery
                                </a>
                                <small class="text-muted d-block mt-1">
                                    Created: @gallery.CreatedDate.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center">
                    <i class="fas fa-images fa-5x text-muted mb-3"></i>
                    <h4 class="text-muted">No Galleries Found</h4>
                    <p class="text-muted">There are no galleries available at the moment.</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .gallery-card {
        transition: transform 0.3s ease;
        height: 100%;
    }

    .gallery-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .preview-img {
        transition: transform 0.3s ease;
    }

    .preview-img:hover {
        transform: scale(1.05);
    }

    .gallery-preview {
        min-height: 160px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
