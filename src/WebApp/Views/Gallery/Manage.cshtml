@model List<BuildingBlock.DTOS.GalleryDTO>
@{
    ViewData["Title"] = "Manage Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Manage Gallery</h4>
            </div>
        </div>
    </div>

    <!-- Create Gallery Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Create New Gallery</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateGallery" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Title" class="form-label">Title *</label>
                                    <input type="text" class="form-control" id="Title" name="Title" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Description" class="form-label">Description</label>
                                    <textarea class="form-control" id="Description" name="Description"
                                        rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Create Gallery
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Galleries List -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Existing Galleries</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Images Count</th>
                                        <th>Created Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var gallery in Model)
                                    {
                                        <tr>
                                            <td>@gallery.Title</td>
                                            <td>@(string.IsNullOrEmpty(gallery.Description) ? "-" : gallery.Description)</td>
                                            <td>
                                                <span class="badge bg-primary">@(gallery.GalleryItems?.Count ?? 0)</span>
                                            </td>
                                            <td>@gallery.CreatedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", "Gallery", new { id = gallery.IdGallery })"
                                                        class="btn btn-sm btn-outline-primary" title="View Gallery">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Manager", "Gallery", new { id = gallery.IdGallery })"
                                                        class="btn btn-sm btn-outline-success" title="Manage Gallery">
                                                        <i class="fas fa-cogs"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-warning"
                                                        data-bs-toggle="modal" data-bs-target="#editModal"
                                                        data-bs-id="@gallery.IdGallery" data-bs-title="@gallery.Title"
                                                        data-bs-description="@gallery.Description" title="Edit Gallery">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <a href="@Url.Action("DeleteGallery", "Gallery", new { id = gallery.IdGallery })"
                                                        class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Are you sure you want to delete this gallery?')"
                                                        title="Delete Gallery">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <i class="fas fa-images fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Galleries Found</h5>
                            <p class="text-muted">Create your first gallery using the form above.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Gallery</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="UpdateGallery" method="post">
                <div class="modal-body">
                    <input type="hidden" id="editId" name="IdGallery">
                    <div class="mb-3">
                        <label for="editTitle" class="form-label">Title *</label>
                        <input type="text" class="form-control" id="editTitle" name="Title" required>
                    </div>
                    <div class="mb-3">
                        <label for="editDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="editDescription" name="Description" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Gallery</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const editModal = document.getElementById('editModal');
        const editId = document.getElementById('editId');
        const editTitle = document.getElementById('editTitle');
        const editDescription = document.getElementById('editDescription');

        editModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-bs-id');
            const title = button.getAttribute('data-bs-title');
            const description = button.getAttribute('data-bs-description');

            editId.value = id;
            editTitle.value = title;
            editDescription.value = description;
        });
    });
</script>
