    function handleFiles(files) {
        // Disable save button during processing
        const saveBtn = document.getElementById('saveGalleryBtn');
        if (saveBtn) {
            saveBtn.disabled = true;
            saveBtn.textContent = 'ƒêANG X·ª¨ L√ù ·∫¢NH...';
